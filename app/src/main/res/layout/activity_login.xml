<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_login_gradient"
    tools:background="@drawable/bg_login_gradient">

    <!-- Logo circular -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logoContainer"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:backgroundTint="?attr/colorSurface"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="48dp"
        app:cardElevation="10dp"
        app:strokeColor="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/cardLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationY="28dp">

        <ImageView
            android:id="@+id/logoApp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Contenedor centrado -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tituloApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textSize="26sp"
                android:gravity="center"/>

            <!-- Subtítulo/bienvenida -->
            <TextView
                android:id="@+id/mensajeBienvenida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo_bienvenida"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="8dp"/>

            <!-- Usuario -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/campoUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_usuario"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:autofillHints="emailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contraseña con toggle -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundMode="outline"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/campoContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_contrasena"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:autofillHints="password"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ¿Olvidaste la contraseña? -->
            <TextView
                android:id="@+id/textoOlvideContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_olvide_contrasena"
                android:textSize="14sp"
                android:textColor="?attr/colorPrimary"
                android:gravity="end"
                android:layout_marginTop="6dp"/>

            <!-- Botón Iniciar sesión -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/botonIniciarSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_iniciar_sesion"
                android:layout_marginTop="12dp"
                app:cornerRadius="24dp"/>

            <!-- ¿No tienes una cuenta? Regístrate -->
            <TextView
                android:id="@+id/textoRegistrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_no_cuenta_registrate"
                android:textSize="14sp"
                android:textColor="?attr/colorPrimary"
                android:gravity="center"
                android:layout_marginTop="14dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>

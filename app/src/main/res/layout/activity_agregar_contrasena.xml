<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_login_gradient">

    <!-- Card centrada -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAgregar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:strokeColor="@color/colorOutline"
        app:cardBackgroundColor="@color/colorSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="520dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tituloAgregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agregar_titulo"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"/>

            <!-- Servicio / sitio -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:boxBackgroundMode="outline"
                app:startIconDrawable="@drawable/ic_key"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/campoServicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_servicio"
                    android:inputType="textCapWords"
                    android:maxLines="1"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- URL (opcional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundMode="outline"
                app:startIconDrawable="@drawable/ic_link"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/campoUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_url_opcional"
                    android:inputType="textUri"
                    android:maxLines="1"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Usuario / correo -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundMode="outline"
                app:startIconDrawable="@drawable/ic_user"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/campoUsuarioEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_usuario"
                    android:inputType="textEmailAddress"
                    android:autofillHints="emailAddress"
                    android:maxLines="1"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contraseña con toggle -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundMode="outline"
                app:endIconMode="password_toggle"
                app:startIconDrawable="@drawable/ic_lock"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/campoContrasenaNueva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_contrasena"
                    android:inputType="textPassword"
                    android:autofillHints="password"
                    android:maxLines="1"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Indicador de fortaleza de contraseña -->
            <TextView
                android:id="@+id/etiquetaFortaleza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fortaleza: -"
                android:textSize="14sp"
                android:textColor="@color/colorSecondary"
                android:layout_marginTop="8dp"/>
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/indicadorFortaleza"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                app:indicatorColor="@color/colorPrimary"
                app:trackColor="@color/colorOutline"
                android:progress="0"/>

            <!-- Notas (opcional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundMode="outline"
                app:startIconDrawable="@drawable/ic_note"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/campoNotas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_notas_opcional"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:maxLines="4"
                    android:gravity="top"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón guardar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/botonGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_guardar"
                android:layout_marginTop="18dp"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_save"
                app:iconGravity="textStart"
                app:backgroundTint="@color/colorPrimary"
                android:textColor="@color/colorOnPrimary"/>

            <!-- Texto cancelar -->
            <TextView
                android:id="@+id/textoCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agregar_cancelar"
                android:textColor="@color/colorSecondary"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
